# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=false

# =============================================================================
# Database Configuration
# =============================================================================

# SQLite (Development) - Default
DATABASE_URL=sqlite+aiosqlite:///./ai_firewall.db

# PostgreSQL (Production) - Uncomment to use
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/ai_firewall

# PostgreSQL Connection Pool Settings (ignored for SQLite)
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=1800
DB_ECHO=false

# =============================================================================
# Security
# =============================================================================
SECRET_KEY=your-secret-key-change-in-production
API_KEY_HEADER=X-API-Key

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# =============================================================================
# Redis Cache Configuration (Optional)
# =============================================================================

# Redis URL (leave empty to disable caching)
# REDIS_URL=redis://localhost:6379/0

# Connection pool
REDIS_POOL_SIZE=10
REDIS_TIMEOUT=1.0

# Cache TTLs (seconds)
CACHE_TTL_POLICY=300      # 5 minutes
CACHE_TTL_PROJECT=600     # 10 minutes

# Master switch for caching
CACHE_ENABLED=true
