# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=false

# =============================================================================
# Database Configuration
# =============================================================================

# SQLite (Development) - Default
DATABASE_URL=sqlite+aiosqlite:///./ai_firewall.db

# PostgreSQL (Production) - Uncomment to use
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/ai_firewall

# PostgreSQL Connection Pool Settings (ignored for SQLite)
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=1800
DB_ECHO=false

# =============================================================================
# Security
# =============================================================================
SECRET_KEY=your-secret-key-change-in-production
API_KEY_HEADER=X-API-Key

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600
